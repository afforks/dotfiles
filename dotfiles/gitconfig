  name = Rafael Mendonça França
  email = rafael.franca@plataformatec.com.br
[core]
  excludesfile = ~/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[alias]
  amend = commit --amend
  squash = rebase --interactive
  unadd = reset HEAD
  co = checkout
  aa = add -A
  st = status
  ps = push
  pl = pull
[push]
  default = current
[merge]
  tool = vimdiff
[apply]
  whitespace = nowarn
[format]
  pretty = %h - %C(green)%ad%C(reset) - %C(yellow)%s%Creset - %an
[branch]
  autosetuprebase = always
[help]
  autocorrect = -1
[log]
  date = local
